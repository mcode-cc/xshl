{
    "id": "https://www.xshl.org/schemas/1/boom/message.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "schema for an source entry",
    "type": "object",
    "required": ["@context", "body", "created", "sender", "subscribe", "token"],
    "properties": {
        "@context": {
            "description": "The source context",
            "type": "string"
        },
        "body": {
            "description": "The body content",
            "type": "object"
        },
        "created": {
            "description": "Time created",
            "oneOf": [
                    {"type": "number"},
                    {
                        "description": "MongoDB date fields",
                        "type": "object",
                        "required": ["$date"],
                        "properties": {
                            "$date": {"type": "integer"}
                        },
                        "additionalProperties": false
                    }
                ]

        },
        "sender": {
            "description": "Sender",
            "type": "object",
            "required": ["host", "ip", "uid"],
            "properties": {
                "host": {
                    "description": "Host of page",
                    "type": "string"
                },
                "ip": {
                    "description": "User IP",
                    "type": "string"
                },
                "uid": {
                    "description": "User UID",
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "subscribe": {
            "description": "Subscribe URI",
            "type": "string"
        },
        "channel": {
            "description": "Target channel URI",
            "type": "string"
        },
        "token": {
            "description": "User token",
            "type": "string"
        },
        "errors": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "additionalProperties": false
}