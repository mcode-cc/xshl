                }
            },
            "resource": {
                "Attribute": [
                    {
                        "name": "book-title",
                        "value": "Learn German in 90 days"
                    },
                    {
                        "AttributeId": "currency",
                        "Value": "SEK"
                    },
                    {
                        "AttributeId": "price",
                        "Value": 123.34
                    }
                ]
            },
            "environment": {}
        }
    }
}