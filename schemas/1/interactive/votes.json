{
    "id": "https://www.xshl.org/schemas/1/interactive/votes.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Request of contest",
    "additionalProperties": false,
    "required": ["direction", "target"],
    "type": "object",
    "properties": {
        "direction": {
            "enum": [
                "page",
                "first",
                "last",
                "count"
            ]
        },
        "number": {
            "minimum": 1,
            "type": "integer"
        },
        "sort": {
            "type": "integer",
            "minimum": 0
        },
        "target": {
            "additionalProperties": false,
            "required": [
                "class",
                "id"
            ],
            "type": "object",
            "properties": {
                "class": {
                    "type": "string"
                },
                "id": {
                    "type": "string"
                }
            }
        }
    }
}