{
    "id": "https://www.xshl.org/schemas/1/interactive/mistake",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "Schema for an interactive mistake",
    "type": "object",
    "required": ["kwargs"],
    "properties": {
        "kwargs": {
            "description": "schema for an source entry",
            "type": "object",
            "required": ["payload", "region", "url"],
            "properties": {
                "payload": {
                    "description": "The mistake data",
                    "type": "object",
                    "required": ["text", "context"],
                    "properties": {
                        "text": {
                            "description": "The mistake content",
                            "type": "string"
                        },
                        "context": {
                            "description": "The mistake context",
                            "type": "string"
                        },
                        "description": {
                            "description": "The mistake description",
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                },
                "region": {
                    "description": "Region of site",
                    "type": "integer",
                    "minimum": 0
                },
                "target": {
                    "description": "Page data",
                    "type": "object",
                    "required": ["class", "id"],
                    "properties": {
                        "class": {
                            "description": "Page class",
                            "type": "integer",
                            "minimum": 1
                        },
                        "id": {
                            "description": "Page ID",
                            "type": "integer",
                            "minimum": 1
                        }
                    },
                    "additionalProperties": false
                },
                "url": {
                    "description": "Page URL",
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "method": {
            "description": "Method",
            "type": "string"
        },
        "schema": {
            "description": "Schema",
            "type": "string"
        }
    },
    "additionalProperties": false
}
