{
  "id": "https://www.xshl.org/schemas/1/content/chunk/paragraph",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A representation of text in paragraph",
  "type": "object",
  "properties": {
    "@context": {"type": "string"},
    "ru": {"$ref": "#/definitions/locale"},
    "by": {"$ref": "#/definitions/locale"},
    "md": {"$ref": "#/definitions/locale"},
    "kg": {"$ref": "#/definitions/locale"},
    "en": {"$ref": "#/definitions/locale"}
  },
  "additionalProperties": false,
  "definitions": {
    "locale": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": {"type": "string"},
        "hashtags": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"},
          "uniqueItems": true
        },
        "entities": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["@context", "indices"],
            "properties": {
              "@context": {"enum": [ "mention", "accent", "link" ]},
              "class": {"type": "string"},
              "url": {"type": "string"},
              "indices": {
                "type": "array",
                "minItems": 2,
                "maxItems": 2,
                "items": {"type": "integer", "minimum": 0}
              },
              "text": {"type": "string"}
            },
            "additionalProperties": false
          }
        },
        "stats": {
          "type": "object",
          "required": ["noun", "text", "words"],
          "properties": {
            "noun":{"type": "integer", "minimum": 0},
            "text":{"type": "integer", "minimum": 0},
            "words":{"type": "integer", "minimum": 0}
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}