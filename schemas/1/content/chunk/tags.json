{
    "id": "https://www.xshl.org/schemas/1/content/chunk/tags.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A represantion objects of tags",
    "type": "array",
    "minItems": 1,
    "items": [
        {"$ref": "#/definitions/tag"}
    ],
    "definitions": {
        "tag": {
            "@id": {
                "oneOf": [
                    {
                        "type": "integer",
                        "minimum": 1
                    },
                    {
                        "type": "string"
                    }
                ]
            },
            "@class": {
                "oneOf": [
                    {
                        "type": "integer",
                        "minimum": 1
                    },
                    {
                        "type": "string"
                    }
                ]
            },
            "@context": {
                "type": "string",
                "enum": ["tag"]
            },
            "@type": {
                "type": "array",
                "items": {
                    "type": "string"
                },
                "minItems": 1,
                "uniqueItems": true
            },
            "name": {
                "type": "string"
            },
            "scale": {
                "type": "string"
            },
            "ru": {
                "$ref": "https://www.xshl.org/schemas/1/content/chunk/locale.json"
            },
            "by": {
                "$ref": "https://www.xshl.org/schemas/1/content/chunk/locale.json"
            },
            "md": {
                "$ref": "https://www.xshl.org/schemas/1/content/chunk/locale.json"
            },
            "kg": {
                "$ref": "https://www.xshl.org/schemas/1/content/chunk/locale.json"
            },
            "en": {
                "$ref": "https://www.xshl.org/schemas/1/content/chunk/locale.json"
            }
        }
    }
}