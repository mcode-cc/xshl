{
    "id": "https://www.xshl.org/schemas/1/content/chunk/quote.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A represantion object of quote",
    "type": "object",
    "additionalProperties": false,
    "required": ["@id", "@class", "@context", "@type", "@tag"],
    "properties": {
        "@id": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "string"
                }
            ]
        },
        "@class": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "string"
                }
            ]
        },
        "@context": {
            "type": "string",
            "enum": ["quote"]
        },
        "@type": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": ["video", "audio", "animation", "article", "news"]
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "@tag": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "author": {
            "anyOf": [
                {"$ref": "https://www.xshl.org/schemas/1/content/chunk/person.json"},
                {
                    "type": "array",
                    "items": [
                        {"$ref": "https://www.xshl.org/schemas/1/content/chunk/person.json"}
                    ],
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "image": {
            "anyOf": [
                {"$ref": "https://www.xshl.org/schemas/1/content/chunk/photo.json"},
                {
                    "type": "array",
                    "items": [
                        {"$ref": "https://www.xshl.org/schemas/1/content/chunk/photo.json"}
                    ],
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "video": {
            "anyOf": [
                {"$ref": "https://www.xshl.org/schemas/1/content/chunk/video.json"},
                {
                    "type": "array",
                    "items": [
                        {"$ref": "https://www.xshl.org/schemas/1/content/chunk/video.json"}
                    ],
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "audio": {
            "anyOf": [
                {"$ref": "https://www.xshl.org/schemas/1/content/chunk/audio.json"},
                {
                    "type": "array",
                    "items": [
                        {"$ref": "https://www.xshl.org/schemas/1/content/chunk/audio.json"}
                    ],
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "animation": {
            "anyOf": [
                {"$ref": "https://www.xshl.org/schemas/1/content/chunk/animation.json"},
                {
                    "type": "array",
                    "items": [
                        {"$ref": "https://www.xshl.org/schemas/1/content/chunk/animation.json"}
                    ],
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "url": {
            "type": "string",
            "format": "uriref"
        },
        "scale": {
            "type": "string"
        },
        "issue": {
            "type": "string"
        },
        "tags": {
            "$ref": "https://www.xshl.org/schemas/1/content/chunk/tags.json"
        },
        "ru": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "en": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "by": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "md": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "kg": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "meta": {
            "$ref": "https://www.xshl.org/schemas/1/content/def/meta.json"
        }
    }
}