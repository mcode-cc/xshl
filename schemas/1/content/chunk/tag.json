{
    "id": "https://www.xshl.org/schemas/1/content/chunk/tag.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A represantion object of tag",
    "type": "object",
    "additionalProperties": false,
    "required": ["@id", "@class", "@context", "@type", "name"],
    "properties": {
        "@id": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "string"
                }
            ]
        },
        "@class": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "string"
                }
            ]
        },
        "@context": {
            "type": "string",
            "enum": ["tag"]
        },
        "@type": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "name": {
            "type": "string"
        },
        "scale": {
            "type": "string"
        },
        "ru": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "en": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "by": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "md": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "kg": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        }
    }
}