{
    "id": "https://www.xshl.org/schemas/1/content/chunk/media.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A represantion objects of multimedia",
    "type": "object",
    "additionalProperties": false,
    "required": ["@id", "@class", "@context"],
    "properties": {
        "@id": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "string"
                }
            ]
        },
        "@class": {
            "oneOf": [
                {
                    "type": "integer",
                    "minimum": 1
                },
                {
                    "type": "string"
                }
            ]
        },
        "@context": {
            "type": "string",
            "enum": ["audio", "video", "animation", "panorama"]
        },
        "@type": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "uniqueItems": true
        },
        "url": {
            "type": "string",
            "format": "uriref"
        },
        "height": {
            "type": "integer",
            "minimum": 1
        },
        "width": {
            "type": "integer",
            "minimum": 1
        },
        "banner": {
            "ref": "https://www.xshl.org/schemas/1/content/chunk/photo.json" 
        },
        "author": {
            "anyOf": [
                {"$ref": "https://www.xshl.org/schemas/1/content/share/person.json"},
                {
                    "type": "array",
                    "items": [
                        {"$ref": "https://www.xshl.org/schemas/1/content/share/person.json"}
                    ],
                    "minItems": 1,
                    "uniqueItems": true
                }
            ]
        },
        "ru": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "en": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "by": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "md": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "kg": {
            "title": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"},
            "description": {"$ref": "https://www.xshl.org/schemas/1/content/def/locale.json"}
        },
        "meta": {
            "$ref": "https://www.xshl.org/schemas/1/content/def/meta.json"
        }
    }
}