{
    "id": "https://www.xshl.org/schemas/1/content/chunk/locale.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A represantion objects of locale",
    "type": "object",
    "additionalProperties": false,
    "required": ["title"],
    "properties": {
        "title": {
            "type": "string" 
        },
        "description": {
            "type": "string" 
        },
        "hashtags": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string" 
            },
            "uniqueItems": true
        },
        "stats": {
            "$ref": "https://www.xshl.org/schemas/1/content/chunk/stats.json" 
        }
    }
}