{
  "id": "https://xshl.org/schemas/1/content/chunk/header.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "description": "A representation of text in header",
  "type": "object",
  "name": "header",
  "version": "0.0.2",
  "required": [
    "@context",
    "level",
    "ru"
  ],
  "properties": {
    "@id": {
      "oneOf": [
        {
          "type": "integer",
          "minimum": 1
        },
        {
          "type": "string"
        }
      ]
    },
    "@context": {
      "type": "string"
    },
    "meta": {
      "$ref": "https://xshl.org/schemas/1/content/def/meta.json"
    },
    "level": {
      "type": "integer",
      "minimum": 0,
      "maximum": 9
    },
    "ru": {
      "$ref": "https://xshl.org/schemas/1/content/def/locale.json"
    },
    "by": {
      "$ref": "https://xshl.org/schemas/1/content/def/locale.json"
    },
    "md": {
      "$ref": "https://xshl.org/schemas/1/content/def/locale.json"
    },
    "kg": {
      "$ref": "https://xshl.org/schemas/1/content/def/locale.json"
    },
    "en": {
      "$ref": "https://xshl.org/schemas/1/content/def/locale.json"
    }
  },
  "additionalProperties": false
}