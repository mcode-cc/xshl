{
  "id": "https://www.xshl.org/schemas/1/content/chunk/header",
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "A representation of text in header",
  "type": "object",
  "properties": {
    "@context": {"type": "string"},
    "level": {"type": "integer", "minimum": 0, "maximum": 9},
    "ru": {"$ref": "#/definitions/locale"},
    "by": {"$ref": "#/definitions/locale"},
    "md": {"$ref": "#/definitions/locale"},
    "kg": {"$ref": "#/definitions/locale"},
    "en": {"$ref": "#/definitions/locale"}
  },
  "additionalProperties": false,
  "definitions": {
    "locale": {
      "type": "object",
      "required": ["text"],
      "properties": {
        "text": {"type": "string"},
        "hashtags": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"},
          "uniqueItems": true
        },
        "stats": {
          "type": "object",
          "required": ["noun", "text", "words"],
          "properties": {
            "noun":{"type": "integer", "minimum": 0},
            "text":{"type": "integer", "minimum": 0},
            "words":{"type": "integer", "minimum": 0}
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}