{
    "id": "https://xshl.org/schemas/1/content/def/meta.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A represantion objects of meta",
    "type": "array",
    "minItems": 1,
    "items": {
        "type": "object",
        "required": ["name", "value"],
        "additionalProperties": false,
        "properties": {
            "@context": {
                "type": "string"
            },
            "name": {
                "type": "string"
            },
            "value": {
                "oneOf": [
                    {
                        "type": "number"
                    },
                    {
                        "type": "string"
                    },
                    {
                        "type": "boolean"
                    },
                    {
                        "type": "object"
                    }
                ]
            }
        }
    }
}