{
    "id": "https://xshl.org/schemas/1/content/def/locale.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A represantion objects of locale",
    "type": "object",
    "additionalProperties": false,
    "required": ["text"],
    "properties": {
        "text": {
            "type": "string"
        },
        "hashtags": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "entities": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "required": ["@context", "indices"],
                "properties": {
                    "@context": {
                        "enum": ["mention", "accent", "link"]
                    },
                    "@type": {"type": "string"},
                    "class": {"type": "string"},
                    "url": {"type": "string", "format": "uriref"},
                    "indices": {
                        "type": "array",
                        "minItems": 2,
                        "maxItems": 2,
                        "items": {
                            "type": "integer",
                            "minimum": 0
                        }
                    },
                    "text": {
                        "type": "string"
                    }
                },
                "additionalProperties": false
            }
        },
        "stats": {
            "type": "object",
            "required": [
                "noun",
                "text",
                "words"
            ],
            "properties": {
                "noun": {
                    "type": "integer",
                    "minimum": 0
                },
                "text": {
                    "type": "integer",
                    "minimum": 0
                },
                "words": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "additionalProperties": false
        }
    }
}