{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "definitions": {
        "methodObject": {
            "type": "object",
            "required": ["path"],
            "additionalProperties": false,
            "properties": {
                "scope": {
                    "type": "string",
                    "title": "Source scope for method",
                    "description": "Default globals"
                },
                "path": {"type": "string"},
                "result": {
                    "type": "string",
                    "title": "Result node name.",
                    "description": "Node name for the result returned by the method. The result of the last method is available in $.<local scope>.__last__"
                }
            }
        },
        "itemLong": {
            "required": ["method"],
            "properties": {
                "method": {
                    "onyOf": [
                        {"type": "string"},
                        {"$ref": "#/definitions/methodObject"}
                    ]
                },
                "args": {
                    "id": "/properties/xshl/items/properties/args",
                    "type": "array"
                },
                "kwargs": {
                    "id": "/properties/xshl/items/properties/kwargs",
                    "type": "object"
                }
            },
            "additionalProperties": false,
            "type": "object"
        },
        "itemShort": {
            "required": ["m"],
            "properties": {
                "m": {
                    "onyOf": [
                        {"type": "string"},
                        {"$ref": "#/definitions/methodObject"}
                    ]
                },
                "*": {
                    "id": "/properties/xshl/items/properties/args",
                    "type": "array"
                },
                "**": {
                    "id": "/properties/xshl/items/properties/kwargs",
                    "type": "object"
                }
            },
            "additionalProperties": false,
            "type": "object"
        }
    },
    "id": "https://xshl.org/schemas/1/macro/schema.json",
    "required": ["@context", "xshl"],
    "properties": {
        "@context": {
            "id": "/properties/@context",
            "enum": [ "wh:macro" ],
            "description": "An explanation about the purpose of this instance.",
            "title": "The @context Schema"
        },
        "name": {
            "description": "An explanation about the purpose of this instance.",
            "id": "/properties/@id",
            "title": "The @id Schema",
            "type": "string"
        },
        "xshl": {
            "id": "/properties/xshl",
            "items": {
                "onyOf": [
                    { "$ref": "#/definitions/itemShort" },
                    { "$ref": "#/definitions/itemLong" }
                ]
            },
            "type": "array"
        }
    },
    "type": "object"
}