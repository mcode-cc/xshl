{
    "id": "https://www.xshl.org/schemas/1.1/content/def/text.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "The Text",
    "description": "A represantion objects of TT",
    "type": "object",
    "additionalProperties": false,
    "required": ["@value"],
    "properties": {
        "@context": {"$ref": "https://www.xshl.org/schemas/1.1/definitions/context.json"},
        "@type": {"$ref": "https://www.xshl.org/schemas/1.1/definitions/type.json"},
        "@id": {"$ref": "https://www.xshl.org/schemas/1.1/definitions/id.json"},
        "@value": {"type": "string"},
        "@language": {"type": "string"},
        "keywords": {
            "type": "array",
            "minItems": 1,
            "items": {"type": "string"},
            "uniqueItems": true
        },
        "@graph": {"$ref": "https://www.xshl.org/schemas/1.1/definitions/entities.json"},
        "stats": {
            "type": "object",
            "required": ["noun", "text", "words"],
            "properties": {
                "noun": {
                    "type": "integer",
                    "minimum": 0
                },
                "text": {
                    "type": "integer",
                    "minimum": 0
                },
                "words": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "additionalProperties": false
        }
    }
}