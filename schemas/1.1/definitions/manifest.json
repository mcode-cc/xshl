{
    "$id": "https://xshl.org/schemas/1.1/definitions/manifest.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "name": "manifest",
    "version": "0.1.1",
    "title": "Manifest",
    "description": "",
    "type": "object",
    "additionalProperties": false,
    "required": ["name", "version", "permissions", "requirements"],
    "properties": {
        "@context": {
            "$ref": "https://xshl.org/schemas/1.1/definitions/context.json"
        },
        "name": { "type": "string" },
        "version": { "type": "string" },
        "obligation": {
            "type": "array",
            "items": {
                "anyOf": [
                    { "type": "string" },
                    {
                        "$ref": "https://xshl.org/schemas/1.1/definitions/target.json"
                    }
                ]
            },
            "uniqueItems": true
        },
        "advice": {
            "type": "array",
            "items": {
                "anyOf": [
                    { "type": "string" },
                    {
                        "$ref": "https://xshl.org/schemas/1.1/definitions/target.json"
                    }
                ]
            },
            "uniqueItems": true
        },
        "requirements": {
            "type": "array",
            "items": {
                "anyOf": [
                    { "type": "string" },
                    {
                        "$ref": "https://xshl.org/schemas/1.1/definitions/target.json"
                    }
                ]
            }
        },
        "permissions": {
            "type": "array",
            "items": { "type": "string" },
            "minItems": 1,
            "uniqueItems": true
        }
    }
}
