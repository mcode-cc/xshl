{
    "id": "https://www.xshl.org/schemas/1.1/rpc/accounts/person/create.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "The Text",
    "description": "A represantion objects of TT",
    "type": "object",
    "additionalProperties": false,
    "required": ["header", "payload"],
    "properties": {
        "@context": {
            "$ref": "https://www.xshl.org/schemas/1.1/definitions/context.json"
        },
        "@type": {
            "$ref": "https://www.xshl.org/schemas/1.1/definitions/type.json"
        },
        "@id": {
            "$ref": "https://www.xshl.org/schemas/1.1/definitions/id.json"
        },
        "header": {
            "$ref": "https://www.xshl.org/schemas/1.1/definitions/header.json"
        },
        "payload": {
            "oneOf": [
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["args"],
                    "properties": {
                        "args": {
                            "type": "array",
                            "minItems": 1,
                            "maxItems": 1,
                            "items": {
                                "$ref": "https://www.xshl.org/schemas/1.1/content/share/person.json"
                            }
                        }
                    }
                },
                {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["kwargs"],
                    "properties": {
                        "kwargs": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": ["value"],
                            "properties": {
                                "value": {
                                    "$ref": "https://www.xshl.org/schemas/1.1/content/share/person.json"
                                }
                            }
                        }
                    }
                }
            ]
        }
    }
}