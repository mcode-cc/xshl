{
    "id": "https://xshl.org/schemas/1.1/content/chunk/text.json",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "description": "A representation of text in paragraph",
    "name": "xshl-text-def",
    "version": "0.0.1",
    "type": "object",
    "required": ["content"],
    "properties": {
        "@context": {"$ref": "https://xshl.org/schemas/1.1/definitions/context.json"},
        "@type": {"$ref": "https://xshl.org/schemas/1.1/definitions/type.json"},
        "@id": {"$ref": "https://xshl.org/schemas/1.1/definitions/id.json"},
        "content": {
            "oneOf": [
                {
                    "type": "array",
                    "items": {
                        "$ref": "https://xshl.org/schemas/1.1/definitions/text.json"
                    },
                    "minItems": 2,
                    "uniqueItems": true
                },
                {
                    "$ref": "https://xshl.org/schemas/1.1/definitions/text.json"
                }
            ]
        }
    },
    "additionalProperties": false
}